{
  "name": "hone-lang",
  "displayName": "Hone Configuration Language",
  "description": "Syntax highlighting and language support for Hone (.hone) files",
  "version": "0.3.0",
  "publisher": "honelang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/honelang/hone"
  },
  "homepage": "https://github.com/honelang/hone",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages", "Linters", "Formatters"],
  "keywords": ["hone", "configuration", "yaml", "json", "kubernetes", "devops"],
  "activationEvents": [
    "onLanguage:hone"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hone",
        "aliases": ["Hone", "hone"],
        "extensions": [".hone"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hone",
        "scopeName": "source.hone",
        "path": "./syntaxes/hone.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hone",
      "properties": {
        "hone.serverPath": {
          "type": "string",
          "default": "hone",
          "description": "Path to the Hone binary (hone lsp)"
        },
        "hone.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the Hone language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
